{
    "name": "@fireberry/mcp-server",
    "description": "MCP Server for hassle-free usage of Fireberry's API.",
    "version": "0.0.2",
    "main": "dist/stdio.js",
    "module": "src/stdio.ts",
    "type": "module",
    "bin": {
        "mcp-fireberry": "dist/stdio.js"
    },
    "files": [
        "dist/**/*",
        "src/**/*",
        "docs/**/*",
        "LICENSE.md",
        "README.md"
    ],
    "private": false,
    "scripts": {
        "dev": "tsc --watch --project tsconfig.prod.json",
        "check": "tsc --noEmit && eslint",
        "build": "tsc --project tsconfig.prod.json",
        "lint": "eslint",
        "typecheck": "tsc --noEmit",
        "lint:fix": "eslint --fix",
        "format": "prettier --write ./**/*.{ts,js,mjs}",
        "inspect": "mcp-inspector",
        "start": "node dist/stdio.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "contributors": [
        {
            "name": "Aviv Nakar",
            "url": "https://github.com/avivnakar",
            "email": "aviv.nakar@fireberry.com"
        }
    ],
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@modelcontextprotocol/inspector": "latest",
        "@types/bun": "latest",
        "@types/node": "^20.0.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.39.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "optionalDependencies": {
        "dotenv": "^17.2.1"
    },
    "engines": {
        "node": ">=18",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fireberry-crm/mcp-server.git"
    },
    "homepage": "https://github.com/fireberry-crm/mcp-server",
    "license": "MIT"
}
