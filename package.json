{
    "name": "@fireberry/mcp-server",
    "description": "Fireberry MCP Server is a server that implements the MCP protocol for Fireberry's CRM.",
    "version": "0.0.1",
    "main": "dist/index.js",
    "module": "src/index.ts",
    "type": "module",
    "bin": {
        "mcp-fireberry": "dist/index.js"
    },
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "dev:stdio": "bun run --watch src/stdio.ts",
        "dev:http": "bun run --watch src/http.ts",
        "lint": "eslint",
        "inspect": "mcp-inspector",
        "build": "bun build src/index.ts --outdir dist --target node",
        "start": "node dist/index.js",
        "start:stdio": "node dist/stdio.js",
        "start:http": "node dist/http.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "contributors": [
        {
            "name": "Aviv Nakar",
            "url": "https://github.com/avivnakar",
            "email": "aviv.nakar@fireberry.com"
        }
    ],
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "zod": "^4.0.14"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@modelcontextprotocol/inspector": "^0.16.3",
        "@types/bun": "latest",
        "@types/node": "^20.0.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.39.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
